FROM ubuntu:20.04 AS builder

ARG FORCE_REBUILD=0
ARG HASH_BINARY=0
ARG ARG_PACKAGES

ENV DEBIAN_FRONTEND=noninteractive
RUN apt-get update && apt-get install -y ${ARG_PACKAGES} && rm -rf /var/lib/apt/lists/*

COPY .clang-format /.clang-format
COPY . /src

WORKDIR /src

RUN make

# --------------------------------------------------
# Runtime stage
# --------------------------------------------------

FROM ubuntu:20.04

COPY --from=builder /src/btc /btc

USER 65535:65535
ENV HOME=/

ENTRYPOINT ["/btc"]
